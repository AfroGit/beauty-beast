<%- include('partials/header') -%>
  
<!-- Product Start -->
<ul class="">
  <% for(var i=0; i<posts.length; i++) {%>
    <li class="">
      <div class="flex flex-col max-w-screen-lg p-3 pt-10 mx-auto my-4 text-white rounded-lg bg-gray-100 ">

        <div class="flex flex-row w-full">
          <a href="/post/<%= posts[i]._id%>" >
            <img class="object-cover w-64 h-64 max-w-sm rounded-lg grow-0" src="<%= posts[i].image%>" alt="">
          </a>

          <div class="flex flex-col justify-between">
            <h3 class="ml-3 text-sky-700 grow-1">  <%= posts[i].description%></h3>
            <h3 class="mx-3 text-black"><span class="bold">Price:$</span><%= posts[i].price%></h3>
          </div>
        </div>
        
        <div class="flex justify-end ">
        <button class="p-2 bg-orange-500 rounded-lg">Delete</button>
        </div>
      </div>
    </li>
  <% } %>
</ul>
<!-- Product End -->



<div class="flex flex-col items-end gap-4 max-w-screen-lg mx-auto mb-10">
  <div class="w-full sm:max-w-xs bg-gray-100 rounded-lg p-4">
    <div class="space-y-1">
      <div class="flex justify-between text-gray-500 gap-4">
        <span>Subtotal</span>
        <span>$129.99</span>
      </div>

      <div class="flex justify-between text-gray-500 gap-4 max-w-screen-lg mx-auto">
        <span>Shipping</span>
        <span>$4.99</span>
      </div>
    </div>

  <div class="border-t p-4 mt-4 max-w-screen-lg mx-auto">
    <div class="flex justify-between items-start text-gray-800 gap-4">
      <span class="text-lg font-bold">Total</span>

      <span class="flex flex-col items-end">
        <span class="text-lg font-bold">$134.98 USD</span>
       
      </span>
    </div>
  </div>
</div>

</div>

<%- include('partials/footer') -%>